{
  "name": "ts-library-bp",
  "version": "0.0.0",
  "description": "A simple build setup for building typescript libraries",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "start": "ts-node ./index.ts",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "format:watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "precommit": "npm run lint",
    "build": "tsc -p tsconfig.build.json",
    "prepare": "husky install"
  },
  "keywords": [
    "starter",
    "boilerplate",
    "typescript"
  ],
  "author": "Minimally Exceptional LLC",
  "license": "Unlicense",
  "dependencies": {
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "onchange": "^7.1.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "husky": "^8.0.0"
  }
}
