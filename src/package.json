{
  "name": "my-typescript-library",
  "version": "0.0.1",
  "description": "A simple example typescript library",
  "main": "index.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "start": "ts-node ./index.ts",
    "lint": "eslint",
    "build": "npx tsc -p tsconfig.build.json && pnpm run docs && pnpm run build:copy ",
    "build:copy": "cp ./package.json ../dist/package.json && cp -r ../docs ../dist/docs/",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "format": "prettier --config ../.prettierrc './**/*.ts' --write",
    "format:watch": "onchange './**/*.ts' -- prettier --write {{changed}}",
    "docs": "typedoc --out ../docs ./**/*.ts --entryPointStrategy Resolve"
  },
  "author": "YOUR NAME",
  "license": "MIT",
  "dependencies": {
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  }
}
